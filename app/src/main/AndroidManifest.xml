<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.androidcertificacion.petagramretrofit">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".vista.layout.Inicio">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".vista.layout.About"
            android:parentActivityName=".vista.layout.Inicio" />
        <activity
            android:name=".vista.layout.Contacto"
            android:parentActivityName=".vista.layout.Inicio" />
        <activity
            android:name=".vista.layout.MascotasFavoritas"
            android:parentActivityName=".vista.layout.Inicio" />

        <!-- Soporte para 4.0 o inferior -->
        <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value=".vista.layout.Inicio" />

        <activity android:name=".vista.layout.ConfigurarCuenta"></activity>
    </application>

</manifest>