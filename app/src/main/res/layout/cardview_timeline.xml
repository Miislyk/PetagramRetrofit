<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_width="@dimen/cardviewtimeline_size"
    android:layout_height="@dimen/cardviewtimeline_size"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardviewtimeline"
    app:cardCornerRadius="@dimen/cardview_corner"
    android:layout_marginBottom="@dimen/activity_horizontal_margin"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/cvtImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/pinguino"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">


            <TextView
                android:id="@+id/cvtTvLikes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/cardviewtimeline_textViewSize"
                android:text="0" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/bonecafe"
                android:padding="@dimen/cardviewtimeline_imageviewpadding"/>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>