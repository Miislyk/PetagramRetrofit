<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
tools:context="com.androidcertificacion.petagramretrofit.vista.fragments.MiMascota">

<!-- TODO: Update blank fragment layout -->

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cardviewMiMascota"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/circularImagePerfil"
                android:layout_width="@dimen/mimascota_fotoPerfil_size"
                android:layout_height="@dimen/mimascota_fotoPerfil_size"
                android:src="@drawable/kira6"
                app:civ_border_color="@color/colorBorderImageMiMascota"
                app:civ_border="true"
                app:civ_border_width="@dimen/mimascota_fotoPerfil_Border"
                android:layout_gravity="center"
                />

            <TextView
                android:id="@+id/textViewNombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mimascota_nombre"
                android:layout_gravity="center"
                android:textSize="@dimen/mimascota_text_size"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/mimascota"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>

</LinearLayout>