<?xml version="1.0" encoding="utf-8"?>
    <!-- Recycler view que se incrusta como fragmento en la actividad inicio -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/activity_mascotas"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="com.androidcertificacion.petagramretrofit.vista.fragments.mascotas"
android:orientation="vertical">

<android.support.v7.widget.RecyclerView
    android:id="@+id/mascotas"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@id/actionbar">

</android.support.v7.widget.RecyclerView>


</LinearLayout>
